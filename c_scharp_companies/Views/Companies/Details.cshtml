
@model c_scharp_companies.Models.Company

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Company</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div>

    <div>Emploees</div>
    <ul style="border: red 1px dotted">
        @foreach (var employee in Model.Employees)
        {
            <li>
                <p>
                    @Html.DisplayFor(modelItem => employee.Name)
                </p>
                <p>
                    <a asp-controller="Emploees" asp-action="Details" asp-route-id="@employee.Id">Details</a>
                </p>
            </li>
        }
    </ul>

    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
